{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "npm run dev",
        "runtimeExecutable": "npm",
        "windows": {
          "runtimeExecutable": "npm.cmd"
        },
        "runtimeArgs": [
          "run",
          "dev-debug"
        ],
        "port": 5858
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/api/index.js"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Port",
        "address": "localhost",
        "port": 5858
      }
    ]
  }